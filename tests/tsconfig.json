{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "../src/@types/",
      "../node_modules/@types/"
    ],
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "mocks/**/*.mock.ts",
    "specs/**/*.spec.ts",
    "../src/**/*.d.ts"
  ],
  "exclude": [
    "../node_modules/"
  ]
}
