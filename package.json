{
  "name": "nodets-starter",
  "version": "1.0.0",
  "description": "Node starter written in TypeScript",
  "main": "app.js",
  "scripts": {
    "serve": "nodemon src/app.ts",
    "build": "tsc --project .",
    "test": "mocha 'test/**/*.spec.ts' --exit",
    "test:coverage": "nyc npm test",
    "test:reporter": "cat test/coverage/lcov.info | coveralls",
    "test:view": "open-cli test/coverage/lcov-report/index.html",
    "lint": "eslint src/**/*.ts",
    "lint:format": "eslint src/**/*.ts --fix"
  },
  "author": "Peter Kitonga",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.24.0",
    "@aws-sdk/node-http-handler": "^3.23.0",
    "@aws-sdk/types": "^3.22.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "dotenv-expand": "^5.1.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.14",
    "nodemailer": "^6.6.2",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/ejs": "^3.0.7",
    "@types/express": "^4.17.12",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mocha": "^9.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^15.12.4",
    "@types/nodemailer": "^6.4.2",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^29.5.0",
    "mocha": "^9.0.3",
    "nodemon": "^2.0.14",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.0",
    "prettier": "^2.3.1",
    "rewire": "^5.0.0",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.19",
    "supertest": "^6.1.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.2"
  },
  "husky": {
